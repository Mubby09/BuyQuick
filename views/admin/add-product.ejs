<%- include('../includes/head.ejs') %>

  </head>
  <body>
      <%- include('../includes/navigation.ejs') %>

    <main>
      <div class="container">
          <% if (errorMessage) { %>
            <div class="error-message"> <%= errorMessage %> </div>
          <% } %>
        <form action="/add-product" method="POST">
          <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
          <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%= oldInput.title %>" />
           
          </div>
          <div class="form-control">
          <label for="imageUrl">Image</label>
          <input type="text" name="imageUrl" id="imageUrl"   value="<%= oldInput.imageUrl %>"/>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<%= oldInput.price %>" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description"  cols="40" rows="10" value="<%= oldInput.description %>" placeholder="Description has has to be more than 5 letters long" ></textarea>
        </div>
        <button class="btn" type="submit">ADD PRODUCT</button>
        </form>
      </div>
    </main>
    <%- include('../includes/end.ejs') %>
